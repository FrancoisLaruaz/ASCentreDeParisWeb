<div class="col-xs-12">
    @if (@Model.ListeCommentaires.Count > 0)
    {
        <div class="listeCommentaires col-xs-12">
            <div class="Gras col-xs-12" style="font-size:14px;margin-bottom:0px;text-decoration:underline;" align="left">
                <p>
                    Commentaires
                </p>
            </div>
            @foreach (Models.Commentaire commentaire in @Model.ListeCommentaires)
            {
            <div class="col-xs-12 CoinsArrondis divCommentaire" style="@Model.couleurCommentaire">
                <div class="col-xs-12 row">
                    <div class="Gras col-xs-7 formulaireCommentaireUtilisateur"  align="left">
                        @commentaire.Utilisateur
                    </div>
                    <div class="Gras col-xs-5 formulaireCommentaireDate" align="right">
                        @commentaire.strDateCreation
                    </div>
                </div>
                <div class="col-xs-12" style="font-size:16px;margin-top:4px;" align="left">
                    @ASCentreParis.Helpers.HtmlHelper.HTMLRaw("Commentaire", @commentaire.Message)
                </div>
            </div>
            }
        </div>
    }
    else
    {
        <div class="Gras col-xs-12" style="font-size:19px;" align="center">
            Aucun commentaire
        </div>  
    }
</div>	