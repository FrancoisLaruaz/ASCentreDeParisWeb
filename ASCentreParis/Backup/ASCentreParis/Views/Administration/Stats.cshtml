@model Models.Stat

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Statistiques du site</h1>

	<div id="stats_totales">
	  <h3>Statistiques totales</h3>
	  <div style="font-size:16px;">
	    Acceuil : <span class="badge Stat">@Commons.Utils.FormatNumberSpaceSeparator(Model.PageAcceuil)</span> Club : <span class="badge Stat">@Commons.Utils.FormatNumberSpaceSeparator(Model.PageClub)</span> Contact : <span class="badge Stat">@Commons.Utils.FormatNumberSpaceSeparator(Model.PageContact)</span>Equipe : <span class="badge Stat" >@Commons.Utils.FormatNumberSpaceSeparator(Model.PageEquipe)</span> 
		Document : <span class="badge Stat">@Commons.Utils.FormatNumberSpaceSeparator(Model.PageDocument)</span>  Administration : <span class="badge Stat">@Commons.Utils.FormatNumberSpaceSeparator(Model.PageGestion)</span> Actualités : <span class="badge Stat" >@Commons.Utils.FormatNumberSpaceSeparator(Model.PageActualite)</span> 
	 </div>
	  <div style="font-size:16px;padding-top:15px;" >
	    Total : <span class="badge Stat">@Commons.Utils.FormatNumberSpaceSeparator(Model.Total)</span>
	  </div>
 	</div>
	 <div id="VueRecherche" style="padding-top:50px;display:none;" >
	    <h3>Statistiques détaillées</h3>
	  	<div id="loading" class="load" style="display:none">
	    </div>
	   
        <table id="table_id" class="datatable table table-bordered table-striped" style="word-wrap: break-word;width: 100%" cellpadding="0" cellspacing="0">
            <thead class="couleurclub">
                <tr class="couleurclub" style="text-align:left;">
                    <th scope="col" class="sortableColumn couleurclub" id="Mois" style="width: 15% !important; text-align:center"><div>Mois</div></th>
                    <th scope = "col" class="sortableColumn couleurclub" id="PageAcceuil" style="width: 10% !important; text-align:center"><div>Acceuil</div></th>
                    <th scope = "col" class="sortableColumn couleurclub" id="PageClub" style="width: 10% !important; text-align:center"><div>Club</div></th>
                    <th scope = "col" class="sortableColumn couleurclub" id="PageContact" style="width: 10% !important; text-align:center"><div>Contact</div></th>
                    <th scope = "col" class="sortableColumn couleurclub" id="PageEquipe" style="width: 10% !important; text-align:center"><div>Equipe</div></th>
                    <th scope = "col" class="sortableColumn couleurclub" id="PageDocument" style="width: 10% !important; text-align:center"><div>Documents</div></th>
				    <th scope = "col" class="sortableColumn couleurclub" id="PageGestion" style="width: 10% !important; text-align:center"><div>Administration</div></th>
				    <th scope = "col" class="sortableColumn couleurclub" id="PageActualites" style="width: 10% !important; text-align:center"><div>Actualités</div></th>
				   <th scope = "col" class="sortableColumn couleurclub" id="Total" style="width: 10% !important; text-align:center"><div>Total</div></th>
				</tr>
            </thead>
        </table>
        <br /><br />
    </div>

    <div id="divAucunResultat" style="display:none;width:100%;" align="center"><h3>Aucun résultat</h3></div>

<script src="@Url.Content("~/Scripts/AdminStats.js")"></script>

<script type="text/javascript">

	// APPEL DES FONCTIONS AU CHARGEMENT DE LA PAGE
    $(document).ready(function () {
  
	  // création de la datatable
        btnRecherche_onclick();
	   
    });
</script>

@Html.Partial("~/Views/Shared/_PartialBackToTop.cshtml")